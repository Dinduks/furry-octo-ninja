<%
@site_name  = site_name
@site_title = snippet[:title] + ' - ' + site_name
@page_title = snippet[:title]
%>

<header class="jumbotron subhead">
  <h1><%= snippet[:title] %></h1>
</header>

<section class="snippet-body">
  <%= snippet[:body] %>
</section>

<% unless snippet[:tags].to_s.empty? %>
<section>
  <div id="tags">Tags: <%= snippet[:tags] %></div>
</section>
<% end %>

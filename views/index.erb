<%
@site_name = site_name
@site_title = site_name
%>
<h1><%= site_name %></h1>
<table class="table">
  <% @snippets.each do |snippet| %>
  <tr>
    <td>
      <a href="/<%= snippet[:slug] %>"><%= snippet[:title] %></a>
    </td>
    <td>
      Tags:
      <% snippet.tags.each do |t| %>
        <a href="/tag/<%= t.tag %>"><%= t.tag %></a><%= unless t == snippet.tags[-1] then ',' end %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
